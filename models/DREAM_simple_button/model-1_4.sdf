<?xml version="1.0" ?>
<sdf version="1.4">
  <model name="simple_push_button">
    <!-- The base is just a cylinder -->
    <link name="base">
      <pose>0 0 0.0 0 0 0</pose>
      <inertial>
        <mass>1</mass>
        <inertia>
          <ixx>0.002502083</ixx>
          <iyy>0.002502083</iyy>
          <izz>0.005</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="base_collision">
        <geometry>
          <mesh>
              <uri>model://DREAM_simple_button/meshes/base_button.dae</uri>
          </mesh>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.6</mu>
              <mu2>0.6</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="base_visual">
        <geometry>
          <mesh>
              <uri>model://DREAM_simple_button/meshes/base_button.dae</uri>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.1 0.3 0.1 1</diffuse>
          <ambient>0.1 0.15 0.1 1</ambient>
          <specular>0.5 0.6 0.5 1</specular>
          <emissive>0 0 0 0</emissive>
        </material>
        <plugin name="color_plugin" filename="libDREAM_change_color.so"/>
      </visual>
    </link>

    <link name="cylinder">
      <!-- Offset by the height of the base -->
      <pose>0 0 0.005 0 0 0</pose>
      <inertial>
        <mass>1</mass>
        <inertia>
          <ixx>0.003777083</ixx>
          <iyy>0.003777083</iyy>
          <izz>0.00745</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="cylinder_collision">
        <geometry>
          <mesh>
              <uri>model://DREAM_simple_button/meshes/base_cylinder.dae</uri>
          </mesh>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.6</mu>
              <mu2>0.6</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="cylinder_visual">
        <geometry>
          <mesh>
              <uri>model://DREAM_simple_button/meshes/base_cylinder.dae</uri>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.1 0.3 0.1 1</diffuse>
          <ambient>0.1 0.15 0.1 1</ambient>
          <specular>0.5 0.6 0.5 1</specular>
          <emissive>0 0 0 0</emissive>
        </material>
        <plugin name="color_plugin" filename="libDREAM_change_color.so"/>
      </visual>
    </link>

    <link name="button">
      <!-- Offset by the height of the base -->
      <pose>0 0 0.005 0 0 0</pose>
      <inertial>
        <mass>0.1</mass>
        <inertia>
          <ixx>0.0001277083</ixx>
          <iyy>0.0001277083</iyy>
          <izz>0.000245</izz>
          <ixy>0</ixy>
          <ixz>0</ixz>
          <iyz>0</iyz>
        </inertia>
      </inertial>
      <collision name="button_collision">
        <geometry>
          <mesh>
              <uri>model://DREAM_simple_button/meshes/button.dae</uri>
          </mesh>
        </geometry>
        <surface>
          <friction>
            <ode>
              <mu>0.6</mu>
              <mu2>0.6</mu2>
            </ode>
          </friction>
        </surface>
      </collision>
      <visual name="button_visual">
        <geometry>
          <mesh>
              <uri>model://DREAM_simple_button/meshes/button.dae</uri>
          </mesh>
        </geometry>
        <material>
          <diffuse>0.5 0.8 0.5 1</diffuse>
          <ambient>0.1 0.25 0.1 1</ambient>
          <specular>0.7 0.9 0.7 1</specular>
          <emissive>0 0 0 0</emissive>
        </material>
        <plugin name="color_plugin" filename="libDREAM_change_color.so"/>
      </visual>
    </link>

    <joint type="fixed" name="base_cylinder_fixation">
      <pose>0 0 0 0 0 0</pose>
      <parent>base</parent>
      <child>cylinder</child>
    </joint>

    <joint type="prismatic" name="glider">
      <!-- Position the joint at the bottom of the button -->
      <pose>0 0 0 0 0 0</pose>
      <parent>base</parent>
      <child>button</child>
      <!-- The axis defines the joint's degree of freedom -->
      <axis>
        <!-- z-axis -->
        <xyz>0 0 1</xyz>
        <!-- Limit refers to the range of motion of the joint -->
        <limit>
          <lower>0</lower>
          <upper>0.01</upper>
        </limit>
      </axis>
    </joint>

  <plugin name="push_button" filename="libDREAM_button_spring.so"/>
  <plugin name="sensor" filename="libDREAM_button_sensor.so"/>
  </model>
</sdf>
